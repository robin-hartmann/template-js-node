{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint project",
      "type": "shell",
      "command": "npm run lint --silent",
      "group": "none",
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run project",
      "type": "shell",
      "command": "npm run start --silent",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
